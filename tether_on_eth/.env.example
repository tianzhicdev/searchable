# USDT Service Configuration

# Ethereum Network
INFURA_DOMAIN=sepolia.infura.io
INFURA_API_KEY=your_infura_api_key_here

# Contract Addresses
USDT_CONTRACT=0x... # USDT contract address for your network

# Private Key (NEVER commit this to git!)
PRIVATE_KEY=0x...

# Transaction Configuration
# Gas price multiplier (1.2 = 20% above base price for faster mining)
GAS_PRICE_MULTIPLIER=1.2

# Transaction timeout in seconds (how long to wait for mining)
TX_TIMEOUT_SECONDS=30

# Maximum time to wait for transaction confirmation (in blocks)
MAX_BLOCKS_TO_WAIT=50

# Rate limiting
RATE_LIMIT_DELAY_MS=200

# Nonce management
# Whether to use local nonce tracking (true) or fetch from network each time (false)
USE_LOCAL_NONCE_TRACKING=true

# Gas limits
USDT_TRANSFER_GAS_LIMIT=65000

# Cache durations
GAS_PRICE_CACHE_DURATION_MS=120000